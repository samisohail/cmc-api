{
  "AllowedHosts": "*",
  "BaseCurrency": "AUD",
  "Cors": {
    "Allow": [
      "http://localhost:4200"
    ]
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\log.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "rollingInterval":  "RollingInterval.Day" 
        }
      }
    ],
    "Enrich": [
      "FromLogContext\",",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName":  "CMC-API"
    } 
  }
}

